import React, { FC } from 'react';
import { useAuth } from 'hooks/useAuth';
import {
  Navigate, Outlet,
} from 'react-router-dom';

export const ProtectedRoute: FC = () => {
  const { isUserAuthenticated } = useAuth();

  if (!isUserAuthenticated) {
    return <Navigate to="/" />;
  }

  return <Outlet />;
};
